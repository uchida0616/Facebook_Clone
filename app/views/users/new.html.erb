<div class="header">
  <h1>新規登録</h1>
</div>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count,"error") %> prohibited this <%= @user.name %> from being
saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
  <div class="login">
    <%= f.label :name,"名前", class: "text-login" %>
    <%= f.text_field :name %>
    <br></br>
    <%= f.label :email,"メールアドレス", class: "text-login" %>
    <%= f.email_field :email, class: "login-field" %>
    <br></br>
    <%= f.label :password,"パスワード", class: "text-login" %>
    <%= f.password_field :password, class: "login-field" %>
    <br></br>
    <%= f.label :password_confirmation,"パスワードの確認", class: "text-login" %>
    <%= f.password_field :password_confirmation, class: "login-field" %>
  </div>
  <br></br>
  <div class="login">
    <%= f.submit "アカウント作成", class: "login-btn" %>
  </div>
<% end %>
